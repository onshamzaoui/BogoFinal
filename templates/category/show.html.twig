{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">

	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

	<style>
		.bg-theme {
			background-color: #f82249;
		}
		.color-theme {
			color: #f82249;
		}
	</style>
{% endblock %}

	
{% block body %}
<nav
		class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
		<!-- Navbar Brand-->

		<a class="navbar-brand ps-3" href="/home">BOGO</a>
		<!-- Sidebar Toggle-->
		<div class="dropdown">
			<button class="btn bg-theme mx-5" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<i class="fas fa-bars"></i>

			</button>
			<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
				<a class="dropdown-item" href="/home">Accueil</a>
				<a class="dropdown-item" href="/categories">Categories</a>
				<a class="dropdown-item" href="/deals">deals</a>
			</div>
		</div>
		
		<!-- Navbar Search-->
		<form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0 text-right">
			<div class="input-group">
				<input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch"/>
				<button class="btn bg-theme" id="btnNavbarSearch" type="button">
					<i class="fas fa-search"></i>
				</button>
			</div>
		</form>
			<ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li>
                        <a class="dropdown-item" href="login.html">Connexion</a>
                    </li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li>
                        <a class="dropdown-item" href="#!">Deconneion</a>
                    </li>
                </ul>
            </li>
        </ul>
		</nav>

<div class="row">
    {% for deal in deals %}
    <div class="col-lg-4 col-md-6">

        <div class="card" style="width: 18rem;">
			<img class="card-img-top" src="{{asset("assets/img/speakers/") ~ deal.image}}" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">{{deal.dealName}}</h5>
				<p class="card-text">{{ deal.Price }}DT</p>
				<a href="/deal/{{deal.id}}" class="btn bg-theme btn-md mr-1 mb-2">details</a>
				<button type="button" class="btn btn-light btn-md mr-1 mb-2"><i class="fas fa-shopping-cart pr-2"></i>Ajouter au panier</button>
			</div>
	    </div>
    </div>


	

    {% endfor %}
</div>

{% endblock %}
